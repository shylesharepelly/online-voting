
<body>
    <div class="grid grid-cols-6">
      <div class="col-start-3 col-span-2">
          
          <div>
            
          <% if(messages && messages.error && messages.error.length > 0)  { %>
            <% for(var i=0; i<messages.error.length; i++) { %>
                    <li> <%= messages.error[i] %></li>
            <% } %>
          <% } %>
          </div>
          <form action="/elections1/<%=id%>/options" method="post" onsubmit="validate()">
            <input type="hidden" name="_csrf" value="<%=csrfToken %>" />

              <div class="flex gap-2 p-4">
                  <div class="flex-auto">
                      <input type="text" title="Enter atleast 2 characters.Remove space in the beginning"  name="title" placeholder="add option" class="border border-gray-300 rounded text-gray-900 w-full p-2 text-sm" required/>
                  </div>
              
              <div class="flex-none">
                  <button type="submit"   class="bg-green-600 text-white px-5 py-2 rounded font-medium py-1.5">Add Option</button>
              </div>
              
          </div>
      </form>
      <div>
          
    </div>
  </div>
</div>
</body>